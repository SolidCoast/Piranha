@using Piranha.Models.Manager.ContentModels
@model UploadModel
@{
    Layout = string.Empty;

}
<table class="list files">
    <thead>
        <tr>
            <th>Filename</th>
            <th>Size</th>
            <th>Uploaded</th>
        </tr>
    </thead>
    <tbody>
        @foreach (UploadModel.UploadedFile f in Model.Files)
        {
            <tr data-path="@f.Path">
                <td>@f.Name</td>
                <td>@(Math.Max((long)Math.Round((double)f.Size / 1024), 1)) kb</td>
                <td>@f.Date.ToShortDateString()</td>
                <td class="buttons one">
                    <a class="icon add"></a></td>
            </tr>
        }
    </tbody>
</table>