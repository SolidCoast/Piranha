@using Piranha.Resources
@using Piranha.WebPages
<ul class="menu">
    @foreach (Manager.MenuGroup group in Manager.Menu)
    {
        if (group.HasAccess())
        {
            IList<Manager.MenuItem> items = group.ItemsForUser();
            <li@(group.IsActive() ? " class=selected" : string.Empty)><a href="@Url.Action(items[0].Action, items[0].Controller)">@group.Name</a></li>
        }
    }
    <li><a href="@Url.Action("logout", "account")">@Global.MenuLogout</a></li>
</ul>